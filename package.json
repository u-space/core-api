  "scripts": {
    "nodeenv:test": "cross-env NODE_TLS_REJECT_UNAUTHORIZED=0 NODE_ENV=test LOGS_ENABLED=false  nodemon --exec 'ts-node' src/main.ts",
    "start": "ts-node src/index.ts",
    "dev": "cross-env NODE_TLS_REJECT_UNAUTHORIZED=0 NODE_ENV=dev LOGS_ENABLED=true nodemon --exec 'ts-node' src/main.ts",
    "production": "cross-env NODE_ENV=production  nodemon --exec 'ts-node' src/main.ts",
    "heroku": "cross-env NODE_ENV=cloud ts-node src/index.ts",
    "generate": "ts-node swaggerFiles/generator.ts",
    "test:jest": "cross-env NODE_ENV=test jest --runInBand '__tests__'",
    "test:jest:coverage": "cross-env NODE_ENV=test jest --no-cache --coverage --runInBand '__tests__'",
    "cover": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text  mocha -r ts-node/register --forbid-only 'test/**/*.test.*'",
    "coverage": "cross-env NODE_ENV=test nyc --reporter=lcovonly  mocha -r ts-node/register --forbid-only 'test/**/*.test.*' ",
    "coveralls": "cross-env NODE_ENV=test nyc --reporter=lcovonly  mocha -r ts-node/register --forbid-only 'test/**/*.test.*' && cat coverage/lcov.info | coveralls ",
    "typeorm": "ts-node  ./node_modules/typeorm/cli.js",
    "typeorm:migration:create": "npm run typeorm -- migration:create -n prueba",
    "typeorm:migration:generate": "npm run typeorm -- migration:generate -n prueba",
    "dev-mail": "fake-smtp-server -- -a prueba@prueba.com:prueba  --debug",
    "db:diagram": "ts-node ./node_modules/.bin/typeorm-uml ormconfig.json.old",
    "format-write": "prettier --write .",
    "format-check": "prettier --check .",
    "lint": "eslint . --max-warnings 0 --report-unused-disable-directives"
  }
}
